<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/darkblue"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:id="@+id/linera1"
       android:orientation="vertical"

       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="100dp"
           android:layout_centerInParent="true"
           android:layout_height="100dp"
           android:layout_gravity="center"
           android:layout_marginTop="50dp"
           android:src="@drawable/todolist"
           app:tint="@color/white" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Continue to Login"
           android:textColor="@color/white"
           android:textSize="30dp"
           android:layout_marginTop="10dp"
           android:gravity="center"
           android:textStyle="italic"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        android:layout_below="@id/linera1"

        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_log_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_rounded"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/white"
            android:hint="Email"
            android:textColor="@color/white"
            android:padding="15dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/et_login_password"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_rounded"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/white"
            android:hint="Password"
            android:padding="15dp"
            android:textColorHint="@color/white" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:baselineAligned="false"
            android:text="Forget Password"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:background="@drawable/bg_rounded"
            android:padding="5dp"
            android:text="LOg in"
            android:textColor="@color/black"


            android:textSize="20sp"
            app:backgroundTint="@color/white" />


        <Button
            android:id="@+id/btn_googlelogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_rounded"

            android:drawableLeft="@drawable/gooogle"
            android:drawablePadding="20dp"
            android:padding="5dp"
            android:text="sign in with google"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="35dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:text="don't have an account?"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/btn_login_signup"
            android:layout_height="wrap_content"
            android:text="sign up"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

    </LinearLayout>


</RelativeLayout>